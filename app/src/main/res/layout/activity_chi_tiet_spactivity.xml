<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave__3_"
    android:orientation="vertical"
    tools:context=".Activity.ChiTietSPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginRight="20dp"
            />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Complete your profile"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="20sp"-->

<!--            />-->
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:id="@+id/img_anhSP_chitiet"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/anh_coffee_1" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tv_price_chitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:text="$ 30.000đ"
                />
            <ImageView
                android:id="@+id/img_tim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/trai_tim"
                android:layout_gravity="right"
                android:layout_marginRight="33dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_name_chtiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caffee Fin"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5/5"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="#4D000000"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán: 100"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tru"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bo_so_luong"
                android:text="-"
                android:textColor="@color/cam"
                android:textSize="22sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>
            <TextView
                android:id="@+id/tv_soLuong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="     1    "
                android:inputType="number"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bo_so_luong"
                android:text="+"
                android:textColor="@color/cam"
                android:textSize="22sp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>
        </LinearLayout>


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="20dp"
       android:orientation="vertical"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Mô tả:"
           android:textSize="18sp" />
       <TextView
           android:id="@+id/tv_mota"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="       Cappuccino là một loại đồ uống cà phê phổ biến và được yêu thích trên toàn thế giới. Đặc điểm nổi bật của Cappuccino là sự kết hợp hài hòa giữa cà phê espresso, sữa hấp và bọt sữa."
           />
   </LinearLayout>
    <Button
        android:id="@+id/btn_add_chi_tiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Add to Cart"
        android:layout_marginTop="40dp"
        android:background="@drawable/bo_button"
        app:backgroundTint="@null"
        />
</LinearLayout>