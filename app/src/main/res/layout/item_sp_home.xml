<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/img_tim_sp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/trai_tim"
            android:layout_gravity="right"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/image_sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/anh_coffee_1"
                android:layout_gravity="center_horizontal"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caffee Fin"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/price_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 30000Ä‘"
            android:textColor="#FF0000"
            android:gravity="center_horizontal"
            android:layout_marginVertical="3dp"
            />
        <Button
            android:id="@+id/btn_add_home"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Add to Cart"
            android:background="@drawable/bo_button"
            app:backgroundTint="@null"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>